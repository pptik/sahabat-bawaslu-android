<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:grid="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:layout_margin="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_comment_level_0"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/main_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text_view_peringkat"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:foregroundGravity="right"
                            android:layout_below="@+id/label_color_news"
                            android:src="@drawable/recycleview_user"
                            android:text="@string/peringkat"
                            android:gravity="center_vertical"
                            android:textAlignment="center"/>
                        <ImageView
                            android:id="@+id/image_view_thubmnail"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_toRightOf="@id/text_view_peringkat"
                            android:src="@drawable/ic_create_white_36dp"/>
                        <TextView
                            android:id="@+id/text_view_username"
                            android:layout_width="wrap_content"
                            android:text="@string/username_label"
                            android:layout_alignTop="@id/image_view_thubmnail"
                            android:layout_toRightOf="@id/image_view_thubmnail"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/abu"/>
                        <TextView
                            android:id="@+id/text_view_poin"
                            android:layout_width="wrap_content"
                            android:text="@string/poin"
                            android:textSize="40sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="15dp"
                            android:layout_below="@id/text_view_username"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/image_view_thubmnail"
                            android:textColor="@color/abu"
                            android:visibility="visible"/>
                        <TextView
                            android:id="@+id/text_view_poin_label"
                            android:layout_width="match_parent"
                            android:text="@string/poin_label"
                            android:textSize="40sp"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginLeft="2dp"
                            android:layout_below="@id/text_view_username"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/text_view_poin"
                            android:textColor="@color/abu"
                            android:visibility="visible"/>
                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/awan"
                    ></View>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_comment_level_1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_comment_level_0"
            android:layout_marginTop="3dp"
            card_view:cardCornerRadius="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/main_content_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/user_picture_2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:foregroundGravity="right"
                            android:layout_below="@+id/label_color_news"
                            android:src="@drawable/recycleview_user" />
                        <TextView
                            android:id="@+id/username_2"
                            android:layout_width="wrap_content"
                            android:text="@string/username_label"
                            android:layout_alignTop="@id/user_picture_2"
                            android:layout_toRightOf="@id/user_picture_2"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/abu"/>
                        <TextView
                            android:id="@+id/comment_content_2"
                            android:layout_width="match_parent"
                            android:text="@string/post_content_label"
                            android:layout_below="@id/username_2"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/username_2"
                            android:textColor="@color/abu"
                            android:visibility="visible"/>
                        <TextView
                            android:id="@+id/date_post_2"
                            android:layout_width="wrap_content"
                            android:text="@string/date_label"
                            android:layout_below="@+id/comment_content_2"
                            android:layout_toRightOf="@+id/user_picture_2"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/abu"
                            android:visibility="visible"
                            android:layout_marginTop="5dp"
                            />
                        <TextView
                            android:id="@+id/komentari_2"
                            android:layout_width="wrap_content"
                            android:text="@string/comment_numbers_label"
                            android:layout_below="@+id/comment_content_2"
                            android:layout_toRightOf="@+id/date_post_2"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/abu"
                            android:visibility="visible"
                            android:layout_marginTop="5dp"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/awan"
                    ></View>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</FrameLayout>
