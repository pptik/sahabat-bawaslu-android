<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.pptik.ilham.sahabatbawaslu">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".features.login.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.signup.SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name=".features.dashboard.DashboardActivity" />
        <activity android:name=".intro.IntroActivity" />
        <activity android:name=".features.notification.NotificationActivity" />
        <activity android:name=".features.forum.AddForumActivity" />
        <activity android:name=".features.learning.SuplemenMaterialDetailActivity" />
        <activity android:name=".features.learning.CaseMaterialDetailActivity" />
        <activity android:name=".features.news.AddNewsActivity" />
        <activity android:name=".features.gamification.LeaderboardActivity" />
        <activity android:name=".features.news.DetailNewsNotAdminTextActivity" />
        <activity android:name=".features.news.DetailNewsNotAdminMediaActivity" />
        <activity android:name=".features.news.DetailNewsAdminActivity" />
        <activity android:name=".features.news.AddNewsCommentActivity" />
        <activity android:name=".features.learning.AddMaterialCommentActivity" />
        <activity android:name=".features.learning.QuizListActivity" />
        <activity android:name=".features.learning.QuizDetailActivity" />
        <activity android:name=".features.learning.MaterialAdapter" />
        <activity android:name=".features.learning.FileManagerDownloadActivity" />
        <activity android:name=".features.learning.VideoMaterialDetailActivity" />
        <activity android:name=".features.learning.VideoMaterialDetailRevisedActivity" />
        <activity android:name=".features.forum.DetailForumActivity" />
        <activity android:name=".features.forum.AddAnswerActivity"></activity>
        <activity android:name=".features.profile.ProfileUserActivity"></activity>
        <service android:name=".networks.firebase.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".networks.firebase.TokenInstanceService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>